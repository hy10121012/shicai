        <div class="buyer-profile-addresses__address-row">{{ address.province }}</div>
      </div>
      <div class="buyer-profile-addresses__address-right">
        <div ng-if="address.is_default" class="buyer-profile-addresses__address-default">é»˜è®¤</div>
